<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ComiketCircleMapFragment">

    <net.umatoma.comiguide.view.ComiketCircleMapView
        android:id="@+id/circle_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_create_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/ic_plus"
        fab:fab_size="mini"
        fab:fab_colorNormal="@color/colorAccent"
        fab:fab_colorPressed="@color/colorAccentDark"
        android:layout_above="@+id/footer_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_circle_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_create_circle"
        android:layout_alignLeft="@+id/button_create_circle"
        fab:fab_icon="@drawable/ic_list"
        fab:fab_size="mini"
        fab:fab_colorNormal="@color/colorAccent"
        fab:fab_colorPressed="@color/colorAccentDark"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_change_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_circle_list"
        android:layout_alignLeft="@+id/button_circle_list"
        fab:fab_icon="@drawable/ic_layers"
        fab:fab_size="mini"
        fab:fab_colorNormal="@color/colorAccent"
        fab:fab_colorPressed="@color/colorAccentDark"/>

    <FrameLayout
        android:id="@+id/footer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/include_comiket_circle_map_footer" />
    </FrameLayout>
</RelativeLayout>
