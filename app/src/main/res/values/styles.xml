<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorRadioButtonStyle">@style/ColorRadioButton</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/toolbarTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/toolbarTextColorSecondary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/popupMenuTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/popupMenuTextColorSecondary</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/app_theme_button</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ColorRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/color_radio_button</item>
        <item name="android:background">@drawable/color_radio_button</item>
    </style>

    <style name="AppTheme.LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/login_edit_text_background</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ClickableTextView" parent="android:Widget.TextView">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@drawable/clickable_text_color</item>
    </style>

</resources>
